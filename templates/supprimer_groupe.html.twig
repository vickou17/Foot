<script>
$(document).ready(function(e) {
    
    function displayChat() {
    $.ajax({
        url: 'displayChat.php',
        type: 'POST',
        success: function(data) {
            $("#chatDisplay").html(data);
        }
    });
    }
    displayChat();
    setInterval(function() {displayChat();}, 1080);
       $('#sendMessageBtn').click(function(e) {
            var nom = $("#nom").val();           
            var message = $("#message").val();   
            $("#myChatForm")[0].reset();
    
            $.ajax({
                url: 'send.php',
                type: 'POST',
                data: {
                    nom:nom,
                    message:message
            }
            });
        });
    });    
